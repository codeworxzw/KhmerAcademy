<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/videoPlayerItem"
    android:orientation="horizontal"
    android:id="@+id/list_row"
    android:clickable="true">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="3"
        android:id="@+id/iv_playlist_thumbnail" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:padding="5dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android (Lesson 1)"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_playlist_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity Life Cycle"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_playlist_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(3:20)"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_playlist_duration" />
    </LinearLayout>
</LinearLayout>