<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/card_view"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_user1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cmt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tv_cmt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:layout_below="@+id/tv_cmt_user_name"
            android:textColor="@android:color/background_dark" />
        <TextView
            android:id="@+id/tv_cmt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cmt_text"
            android:textSize="10sp"
            android:textColor="@color/colorgray"
            android:text="10/10/10"/>

    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>


